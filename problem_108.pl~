:- module(problem_108, [list_dedup/2, nodup/1]).

:- use_module(library(dif)).

list_dedup(A, B) :-
    nodup(B),
    list_dedup_(A, B).
    
list_dedup_([], []).
list_dedup_([A], [A]).    
list_dedup_([A,B|T], [A|U]) :-
    dif(A, B),
    write([[A,B|T], [A|U]]), nl,    
    list_dedup_([B|T], U).
list_dedup_([A,A|T], U) :-
    write([[A,A|T], U]), nl,    
    list_dedup_([A|T], U).

nodup([_]).
nodup([A,B|T]) :- dif(A, B), nodup([B|T]).    
