:- use_module(library(clpz)).

list_slice(A, I, J, S) :-
    I #>= 0,
    J #>= I,
    J1 #= J + 1,
    list_slice_(A, I, J1, S).

list_slice_(_, 0, 0, []).
list_slice_([H|T], 0, J, [H|R]) :-
    J #> 0,
    J1 #= J - 1,
    list_slice(T, 0, J1, R).
list_slice_([_|T], I, J, R) :-
    I #> 0,
    I1 #= I - 1,
    J1 #= J - 1,
    list_slice_(T, I1, J1, R).
